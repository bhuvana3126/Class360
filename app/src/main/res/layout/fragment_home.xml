<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".view.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/rectangle_bg"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/scool_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/school_name_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/scool_name_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg"
            />

        <TextView
            android:id="@+id/dob_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Of birth"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/school_name_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/dob_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dob_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg" />



        <TextView
            android:id="@+id/parent_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent's Name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dob_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/parent_name_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/parent_name_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg"
            />



        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/parent_name_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg" />



        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/phone_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/email_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg"
            />



        <TextView
            android:id="@+id/total_absent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Absents in Year"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/email_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/total_absent_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/total_absent_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg"/>



        <TextView
            android:id="@+id/class_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/total_absent_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/class_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/class_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg"
           />



        <TextView
            android:id="@+id/fee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/class_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/fee_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fee_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:inputType="number"
            android:background="@drawable/rectangle_bg"
            />



        <TextView
            android:id="@+id/paid_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid Aount"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/fee_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/paid_amount_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/paid_amount_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:background="@drawable/rectangle_bg"
            />


        <TextView
            android:id="@+id/due_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Amount"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/paid_amount_et"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/due_amount_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/due_amount_tv"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_bg"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</FrameLayout>